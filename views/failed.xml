<openerp>
    <data>
        <template name="Failed" id="payment_sagepay.Failed">
            <t t-call="website.layout">
                <div class="container" id="id_section1">
                    <div id="wrap" t-attf-class="wrapper">
                        <div class="row">
                            <div class="col-md-10" align="center">
                                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                                <link href="/payment_sagepay/static/src/css/transaction_failed.css" rel="stylesheet" />
                                <form action="/shop/payment" class="form-horizontal mt32" onsubmit="" method="post" >
                                    <div class='row div_head' style='height:80px;'>
                                        <div class='col-md-3' style='margin-left:10%'>
                                            <img src='/payment_sagepay/static/src/img/failed.jpg' width='75px' height='75px' style="margin-left: 249px;"></img>
                                        </div>
                                        <div class='col-md-6'>
                                            <h2><b>Transaction Failed</b></h2>
                                        </div>
                                    </div>
                                    <div class='row div_head' align='center' style='height:30px;'>
                                        <div class="col-md-8" style='margin-left:173px;'>
                                            Reason: <t t-esc='error'/>
                                        </div>
                                    </div>
                                    <div class='row div_head' align='center' style='height:30px; margin-left: 130px;'>
                                        <div class="col-md-3" style='margin-left:200px;'>
                                            <button type="submit" width="100px" id='id_submit' class="submit_class btn btn-success">
                                                Return to Shopping Cart
                                            </button>
                                        </div>
                                        <div class="col-md-3">
                                            <a href='/' width="100px" id='id_submit' class="btn btn-success">
                                                Back to Home Page
                                            </a>
                                        </div>
                                    </div>
                                    <div class="clearfix"/>
                                    <br/>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
